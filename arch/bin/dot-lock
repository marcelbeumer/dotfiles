#!/usr/bin/env bash
current="${HOME}/.local/share/wallpaper/.current"

args=()
if [ -f "${current}" ]; then
  path=$(cat "${current}")
  args=(-i "${path}")
fi

swaylock "${args[@]}" -f \
  --indicator-idle-visible \
  --indicator-thickness=10 \
  --indicator-radius=60 \
  --inside-color=#ffffff66 \
  --text-color=#ffffff \
  --ring-color=#ffffffCC
