#!/usr/bin/env bash
dir="${HOME}/.local/share/wallpaper"
current="${dir}/.current"

if [ -n "$1" ]; then
    realpath "$1" > "${current}"
fi

if [ ! -f "${current}" ]; then
    echo "No wallpaper found, please set $current" >&2
    exit 1
fi

killall swaybg 2>/dev/null

path=$(cat "${current}")
swaybg -i "${path}" --mode fill >/dev/null 2>&1 &
